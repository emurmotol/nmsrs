{{define "content"}}
<div class="card">
    <div class="card-header">
        <span class="pull-left">{{.Title}}</span>
        <span class="pull-right">
            <a href="/users/{{.User.ID.Hex}}/edit">Edit</a>
        </span>
    </div>
    <div class="card-block">
        <h1>{{.User.Name}}</h1>
    </div>
</div>
{{end}}