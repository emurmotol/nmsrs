{{define "content"}} {{with .Flash}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button> {{.}}
</div>
{{end}} {{with .Users}}
<div class="card card-outline-info">
    <div class="card-block">
        <div class="card-title">
            <a class="btn btn-outline-primary" href="/users/create" role="button">
                <i class="fa fa-plus"></i> Add
            </a>
            <button class="btn btn-outline-danger" id="delete_user_button" role="button" disabled>
                <i class="fa fa-trash"></i> Delete
            </button>
        </div>
        <table class="table table-hover mb-0" id="users_table">
            <thead>
                <tr>
                    <th><input type="checkbox" id="select_all_users"></th>
                    <th>Name</th>
                    <th>Email address</th>
                    <th>Created at</th>
                </tr>
            </thead>
            <tbody>
                {{range .}}
                <tr id="{{.ID.Hex}}">
                    <td><input type="checkbox"></td>
                    <td><a href="/users/{{.ID.Hex}}">{{.Name}}</a></td>
                    <td><a href="mailto:{{.Email}}">{{.Email}}</a></td>
                    <td>{{DateForHumans .CreatedAt}}</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<div class="alert alert-info mb-0" role="alert">
    <h4 class="alert-heading">Collection is empty</h4>
    <p class="mb-0">To add a user visit this <a href="/users/create">link<i class="fa fa-link"></i></a>.</p>
</div>
{{end}} {{end}}